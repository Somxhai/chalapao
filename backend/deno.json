{
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.12",
    "better-auth": "npm:better-auth@^1.2.5",
    "hono": "jsr:@hono/hono@^4.6.20",
    "deno-postgres": "https://deno.land/x/postgres@v0.19.3/mod.ts",
    "pg": "npm:pg@^8.14.1",
    "uuid": "npm:uuid@^11.1.0"
  },
  "tasks": {
    "start": "deno run --allow-net main.ts",
    "dev": "deno run --allow-net --env-file --allow-env main.ts",
    "test": "DEV=\"true\" deno test tests/ --allow-env --allow-net --allow-read --env-file=.env"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  },
  "nodeModulesDir": "auto"
}
